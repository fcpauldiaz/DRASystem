{% extends '::base.html.twig' %}

{% block title %}
    Consulta Detalle Área
{% endblock %}

{% block javascriptDataTables %}

    <script src = {{asset('js/dataTablesInit.js')}}>
    </script>
{% endblock %}
{% block body -%}
  <br>
  <br>
    <h1>Consulta Detallada por Área</h1>
    <h2>Área: {{area_nombre}}</h2>
    <table id="table"  class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Actividad</th>
                <th>Usuario</th>
                <th>Cliente</th>
                <th>Fecha</th>
                <th>Horas invertidas</th>
                <th>CostoPorHora </th>
                <th>CostoReal</th>

            </tr>
        </thead>
        <tbody>

            {% set cont = 0 %}
            {% set acumHoras = 0 %}

            {% for registro in registros %}
            <tr>
              <td>{{registro.actividad}}</td>
              <td>{{registro.nombre}} {{registro.apellidos}}</td>
              <td>{{registro.cliente}}</td>
              <td>{{registro.fechaHoras|date('d-m-Y')}}</td>
              <td>{{registro.horas}}</td>
              <td>{{registro.costoPorHora| number_format(2, '.', ', ')}}</td>
              <td>{{registro.costoReal| number_format(2, '.', ', ')}}</td>
              {% set acumHoras = acumHoras + registro.horas %}
              {% set cont = cont + registro.costoReal %}

            </tr>
            {% endfor %}


            <tr>
                <td><b>Total<b> </td>
                <td> </td>
                <td> </td>
                <td> </td>
                <td> {{acumHoras}}</td>
                <td> </td>
                <td>{{cont | number_format(2, '.', ', ')}} </td>


            </tr>
        </tbody>
    </table>



      <br>
      <br>
    {% endblock %}

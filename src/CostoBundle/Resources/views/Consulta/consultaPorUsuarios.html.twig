{% extends '::base.html.twig' %}

{% block stylesheets %}
   
    {{ form_stylesheet(form) }}
{% endblock %}

{% block javascripts %}
    {{ form_javascript(form) }}
   <script src="{{asset('js/showHideElements.js')}}"></script>
   <script src="{{asset('js/dateModifier.js')}}"></script>
{% endblock %}

{% block body -%}
	<br>
	{{ form(form)}}
    <br>
    <h1>Consulta Proyecto Presupuesto {{nombrePresupuesto}}</h1>
   
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Usuario</th>
                <th>Costo</th>
                <th>Presupuesto</th>
                <th>Diferencia</th>
                <th>Costo Por Hora</th>
                <th>Costo Total</th>
                <th>Acci√≥n</th>
            </tr>
        </thead>
        <tbody>
          
            
            {% for entity in consultaUsuario %}
                <tr>
               
                <td>{{entity.usuario.username}}</td>
                <td>{{entity.horasCalculadas}}</td>
                <td>{{entity.horasPresupuesto}}</td>
                <td>{{entity.diferencia}}</td>
                <td>{{entity.costoPorHora | number_format(2, '.', ', ')}}</td>
                <td>{{entity.costoTotal | number_format(2, '.', ', ')}}</td>
                   <td>
                    <a  href="{{ path('presupuesto_individual_usuario', { 'nombrePresupuesto': nombrePresupuesto , 'usuario_id' : entity.usuario.id}) }}" class="btn btn-xs btn-info">Mostrar detalle</a>
                </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    
    	

      <br>
      <br>
    {% endblock %}

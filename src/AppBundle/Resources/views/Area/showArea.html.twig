{% extends '::base.html.twig' %}

{% block link %}
    <li><a href="{{path('homepage')}}"><i class="fa fa-link"></i>Dashboard</a></li>
     <li><a href="{{path('area')}}"><i class="fa fa-link"></i>Lista Actividades</a></li>
    <li class="active">Área</li>
{% endblock %}


{% block title %}
    Mostrar Área
{% endblock %}

{% block body -%}
    <h1>Área</h1>

    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>Nombre</th>
                <td>{{ entity.nombre }}</td>
            </tr>
            <tr>
                <th>Fechacreacion</th>
                <td>{{ entity.fechaCreacion|date('Y/m/d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Fechaactualizacion</th>
                <td>{{ entity.fechaActualizacion|date('Y/m/d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>


    <ul class="record_actions">
    {% if is_granted('ROLE_CREAR_ACTIVIDAD') %}
    <li>
        <a class="btn btn-primary btn-block" href="{{ path('area_new') }}">
          Crear nueva área
        </a>
    </li>
    {% endif %}
    {# ya no se revisa si se puede ver la actividad, porque para llegar aquí se necesita ese permiso #}
    <li>
        <a class="btn btn-default" href="{{ path('area') }}">
           Ver todas las áreas
        </a>
    </li>
    {% if is_granted('ROLE_EDITAR_ACTIVIDADES') %}
    <li>
        <a class="btn btn-warning" href="{{ path('area_edit', { 'id': entity.id }) }}">
            Editar
        </a>
    </li>
    {% endif %}
    </ul>
{% endblock %}

{% extends '::base.html.twig' %}

{% block link %}
    <li><a href="{{path('homepage')}}"><i class="fa fa-link"></i>Dashboard</a></li>
     <li><a href="{{path('cliente')}}"><i class="fa fa-link"></i>Listado clientes</a></li>
    <li class="active"></i>Mostrar cliente</li>
{% endblock %}

{% block title %}
    Mostrar Cliente
{% endblock %}

{% block javascriptDataTables %}
    
    <script src = {{asset('js/dataTablesInit.js')}}>
    </script>
{% endblock %}


{% block body -%}
    <h1>Cliente</h1>

    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>Nit</th>
                <td>{{ entity.nit }}</td>
            </tr>
            <tr>
                <th>Raz√≥n Social</th>
                <td>{{ entity.razonSocial }}</td>
            </tr>
            <tr>
                <th>Nombre Comercial</th>
                <td>{{ entity.nombreComercial }}</td>
            </tr>
            <tr>
                <th>Servicios Prestados</th>
                <td>{{ entity.serviciosPrestados }}</td>
            </tr>
            <tr>
                <th>Usuario Asignado</th>
                <td>{{ entity.usuarioAsignado }}</td>
            </tr>
        </tbody>
    </table>

    <div class="row">
         {% if is_granted('ROLE_EDITAR_CLIENTES') %}
       <div class="col-xs-12 col-sm-12 col-md-4">
            <a class="btn btn-warning btn-block" href="{{ path('cliente_edit', {'id': entity.id}) }}">  
                Editar Cliente
            </a>
        </div>
        {% endif %}
        {% if is_granted('ROLE_CREAR_CLIENTES') %}
        <div class="col-xs-12 col-sm-12 col-md-4">
        
            <a class="btn btn-primary btn-block" href="{{ path('cliente_new')}}">
                Ingresar Nuevo cliente
            </a>
        </div>
        {% endif %}
        <div class="col-xs-12 col-sm-12 col-md-4">
            <a class="btn btn-default btn-block" href="{{ path('cliente') }}">
               Ver todos los clientes
            </a>
        </div>
    </div>
  
{% endblock %}

{% extends '::base.html.twig' %}

{% block javascripts %}
   <script src="{{asset('js/confirm-dialog.js')}}"></script>
{% endblock %}

{% block link %}
    <li><a href="{{path('homepage')}}"><i class="fa fa-link"></i>Dashboard</a></li>
       <li><a href="{{path('cliente')}}"><i class="fa fa-link"></i>Lista clientes</a></li>
    <li class="active">Editar Cliente</li>
{% endblock %}

{% block title %}
    Editar Cliente
{% endblock %}

{% block body -%}
    <h1>Editar Cliente</h1>

    {{ form(edit_form) }}

        <ul class="record_actions">
    <li>
        <a class="btn btn-default" href="{{ path('cliente') }}">
           Ver todos
        </a>
    </li>
    {% if is_granted('ROLE_ELIMINAR_CLIENTES') %}
    <li><button id="simple-confirm" class="btn btn-danger">Eliminar</button>
    </li>
    <div class="modal">
     {{ form(delete_form) }}
    </div>
    {% endif %}
   
</ul>
{% endblock %}

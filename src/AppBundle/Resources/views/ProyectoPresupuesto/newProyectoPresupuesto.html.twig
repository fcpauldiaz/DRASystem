{% extends '::base.html.twig' %}

{% block link %}
    <li><a href="{{path('homepage')}}"><i class="fa fa-link"></i>Dashboard</a></li>
    <li><a href="{{path('proyectopresupuesto')}}"><i class="fa fa-link"></i>Listado presupuestos</a></li>
    <li class="active"></i>Nuevo Presupuesto</li>
{% endblock %}

{% block title %}
    Nuevo Presupuesto
{% endblock %}

{% block body -%}
    <h1>Crear nuevo Proyecto Presupuesto</h1>

    {{ form_start(form) }}
    {{ form_row(form.nombrePresupuesto) }}
    {{ form_row(form.honorarios) }}
    {{ form_row(form.clientes) }}
    {{ form_row(form.presupuestoIndividual) }}
     <div class="row">
        <div class="col-sm-5 col-md-5">
            <div class="form-group">
               {{form_row(form.submitAndSave)}}
            </div>
        </div>
       <div class="col-sm-4 col-md-4">
            <div class="form-group">
                {{form_row(form.submit)}}
            </div>
        </div>
        <div class="col-sm-3 col-md-3">
            <div class="form-group">
                <a class="btn btn-info" href="{{ path('proyectopresupuesto') }}">
		           Ver todos los presupuestos
		        </a>
            </div>
        </div>
    </div>
	{{ form_end(form) }}
 <br>
 <br>
 <br>
{% endblock %}

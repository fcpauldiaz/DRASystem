{% extends '::base.html.twig' %}

{% block javascripts %}
    <script src="{{asset('js/confirm-dialog.js')}}"></script>
{% endblock %}

{% block link %}
    <li><a href="{{path('homepage')}}"><i class="fa fa-link"></i>Dashboard</a></li>
     <li><a href="{{path('proyectopresupuesto')}}"><i class="fa fa-link"></i>Listado Presupuestos</a></li>
    <li class="active"></i>Editar Presupuesto</li>
{% endblock %}

{% block title %}
    Editar Presupuesto
{% endblock %}

{% block body -%}
	<br>
    <h1>Editar Proyecto De Presupuesto</h1>

    {{ form(edit_form) }}

    <div class="row">
        {% if is_granted('ROLE_ELIMINAR_PRESUPUESTOS') %}
        <div class="col-xs-12 col-sm-12 col-md-6">
            <button id="simple-confirm" class="btn btn-danger btn-block">Eliminar</button>
            <div class="modal">
                {{ form(delete_form) }}
            </div>
        </div>
        {% endif %}
        <div class="cols-xs-12 col-sm-12 col-md-6">
               <a class = "btn btn-default btn-block" href="{{ path('proyectopresupuesto') }}">
            Ver todos
            </a>
        </div>
    </div>
{% endblock %}

{% extends '::base.html.twig' %}

{% block link %}
    <li><a href="{{path('homepage')}}"><i class="fa fa-link"></i>Dashboard</a></li>
     <li><a href="{{path('actividad')}}"><i class="fa fa-link"></i>Lista Actividades</a></li>
    <li class="active">Mostrar Actividad</li>
{% endblock %}

{% block title %}
    Mostrar Actividad
{% endblock %}

{% block body -%}
    <h1>Actividad</h1>

    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>Nombre Actividad</th>
                <td>{{ entity.nombre }}</td>
            </tr>
             <tr>
                <th>Área</th>
                <td>{{ entity.area }}</td>
            </tr>
            <tr>
                <th>Abreviatura</th>
                <td>{{ entity.abreviatura }}</td>
            </tr>
             <tr>
                <th>Actividad No cargable</th>
                <td>{{ entity.actividadNoCargable }}</td>
            </tr>
        </tbody>
    </table>
    
    <ul class="record_actions">
    {% if is_granted('ROLE_CREAR_ACTIVIDAD') %}
    <li>
        <a class="btn btn-primary btn-block" href="{{ path('actividad_new') }}">
          Crear nueva actividad
        </a>
    </li>
    {% endif %}
    {# ya no se revisa si se puede ver la actividad, porque para llegar aquí se necesita ese permiso #}
    <li>
        <a class="btn btn-default" href="{{ path('actividad') }}">
           Ver todas las actividades
        </a>
    </li>
    {% if is_granted('ROLE_EDITAR_ACTIVIDADES') %}
    <li>
        <a class="btn btn-warning" href="{{ path('actividad_edit', { 'id': entity.id }) }}">
            Editar
        </a>
    </li>
    {% endif %}
</ul>
<br>
<br>
{% endblock %}

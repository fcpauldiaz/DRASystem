{% block javascripts %}
    <script src="{{asset('js/confirm-dialog.js')}}"></script>
{% endblock %}
    <h1>Registro Horas Presupuestadas</h1>

    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>Código</th>
                <td>{{ entity.__toString }}</td>
            </tr>
            <tr>
                <th>Horas Presupuestadas</th>
                <td>{{ entity.horasPresupuestadas }}</td>
            </tr>
            <tr>
                <th>Fecha creación</th>
                <td>{{ entity.fechaCreacion|date('d-m-Y H:i:s') }}</td>
            </tr>
             <tr>
                <th>Actividad</th>
                <td>{{ entity.actividad }}</td>
            </tr>
              <tr>
                <th>Cliente</th>
                <td>{{ entity.cliente }}</td>
            </tr>

           
             <tr>
                <th>Usuarios asignado</th>
                <td>{{ entity.usuario }}</td>
            </tr>
           
            <tr>
                <th>Proyecto</th>
                <td>{{ entity.proyecto}}</td>
            </tr>

        </tbody>
    </table>

        <ul class="record_actions">
    
    <li>
        <a class="btn btn-default" href="{{ path('horaspresupuesto_edit', { 'id': entity.id }) }}">
            Editar
        </a>
    </li>
    {% if is_granted('ROLE_ELIMINAR_HORAS') %}
        <li>
            <button id="simple-confirm" class="btn btn-danger">Eliminar</button> 
        </li>
        <div class="modal">
        {{form(delete_form)}}  
        </div>
    {% endif %}
</ul>

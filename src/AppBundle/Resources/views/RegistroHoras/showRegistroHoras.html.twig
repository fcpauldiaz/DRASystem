{% extends '::base.html.twig' %}
{% block link %}
    <li><a href="{{path('homepage')}}"><i class="fa fa-link"></i>Dashboard</a></li>
     <li><a href="{{path('registrohoras')}}"><i class="fa fa-link"></i>Listado Registro Horas</a></li>
    <li class="active"></i>Mostrar Registro</li>
{% endblock %}

{% block javascriptDataTables %}
    
    <script src = {{asset('js/dataTablesInit.js')}}>
    </script>
{% endblock %}


{% block body -%}
    <br>
    <h1>Registro Horas</h1>
    
    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>Fecha</th>
                <td>{{ entity.fechaHoras|date('d-m-Y') }}</td>
            </tr>
             <tr>
                <th>Proyecto  Presupuesto asignado</th>
                <td>{{ entity.proyectoPresupuesto }} 
                  {% if id is defined %}
                  <a class="btn btn-info btn-xs" href="{{ path('proyectopresupuesto_show', { 'id': entity.proyectoPresupuesto.id }) }}">
                     Mostrar
                    }
                    </a>
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Horas Invertidas</th>
                <td>{{ entity.horasInvertidas }}</td>
            </tr>
            <tr>
                <th>Actividad</th>
                <td>{{ entity.actividad }}</td>
            </tr>
              <tr>
                <th>Cliente</th>
                <td>{{ entity.cliente }}</td>
            </tr>
             <tr>
                <th>Ingresado Por</th>
                <td>{{ entity.ingresadoPor }}</td>
            </tr>

        </tbody>
    </table>

    
    <div class="row">
       <div class="col-xs-12 col-sm-12 col-md-4">
            <a class="btn btn-warning btn-block" href="{{ path('registrohoras_edit', { 'id': entity.id }) }}">
            Editar
            </a>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-4">
            <a class="btn btn-primary btn-block " href="{{ path('registrohoras_new') }}">
                Ingresar nuevo registro
            </a>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-4">
            <a class="btn btn-default btn-block" href="{{ path('registrohoras') }}">
            Ver todos los ingresos
            </a>
        </div>
    </div>
<br>
<br>
{% endblock %}

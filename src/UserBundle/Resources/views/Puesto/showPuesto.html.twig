
    <h1>Puesto</h1>

    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>Tipo</th>
                <td>{{ entity.tipoPuesto }}</td>
            </tr>
            <tr>
                <th>Nombre Puesto</th>
                <td>{{ entity.nombrePuesto }}</td>

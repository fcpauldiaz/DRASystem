{% extends '::base.html.twig' %}
    {% block body -%}
        <h1>Puestos del Usuario {{app.user.nombre}} {{app.user.apellidos}}</h1>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Tipo Puesto</th>
                    <th>√Årea</th>
                    <th>Fecha</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                {% for entity in entities %}
                <tr>
                    <td>{{entity.tipoPuesto}} </td>
                    <td>{{entity.departamento}} </td>
                    <td>{% if entity.date %}{{ entity.date|date('d-m-Y') }}{% endif %}</td>
                    <td>
                        <ul>
                            <li>
                                <a class="btn btn-info btn-xs" href="{{ path('puesto_show', { 'id': entity.id }) }}">Mostrar</a>
                            </li>
                            <li>
                                <a class="btn btn-warning btn-xs"href="{{ path('puesto_edit', { 'id': entity.id }) }}">Editar</a>
                            </li>
                        </ul>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        <br>
        <a class="btn btn-block btn-default" href="{{ path('puesto_new') }}">
        Crear Nuevo Puesto
        </a>
        <br>
        <br>
        <br>
    {% endblock %}

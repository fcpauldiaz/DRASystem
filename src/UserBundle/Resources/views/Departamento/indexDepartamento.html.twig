                <td>{{ entity.nombreDepartamento }}</td>
                <td>
                <ul>
                    <li>
                        <a class="btn btn-default" href="{{ path('departamento_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a class="btn btn-default" href="{{ path('departamento_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a class="btn btn-default btn-block" href="{{ path('departamento_new') }}">
                Crear nuevo registro
            </a>
        </li>
    </ul>
    {% endblock %}

<div class="col-md-1"></div>
<div class="container">
	<div class="col-md-11">
		<section>
			<div class="wizard">
				<div class="wizard-inner">
					<div class="connecting-line"></div>
					<ul class="nav nav-tabs" role="tablist">
						<li role="presentation" class="active">
							<a href="#step1" data-toggle="tab" aria-controls="step1" role="tab" title="Step 1">
							<span class="round-tab">
							<i class="glyphicon glyphicon-folder-open"></i>
							</span>
							</a>
						</li>
						<li role="presentation" class="disabled">
							<a href="#step2" data-toggle="tab" aria-controls="step2" role="tab" title="Step 2">
							<span class="round-tab">
							<i class="glyphicon glyphicon-pencil"></i>
							</span>
							</a>
						</li>
						<li role="presentation" class="disabled">
							<a href="#complete" data-toggle="tab" aria-controls="complete" role="tab" title="Complete">
							<span class="round-tab">
							<i class="glyphicon glyphicon-ok"></i>
							</span>
							</a>
						</li>
					</ul>
				</div>
				{{ form_start(form, {'action' : path('trabajador_registration') } )}}
				<div class="tab-content">
					<div class="tab-pane active" role="tabpanel" id="step1">
						<h2>Registro general de datos personales</h2>
						<hr class="colorgraph">
						{# mostrar errores del primer tab #}
						<div data-alerts="alerts" data-titles="{'warning': '<em>Warning!</em>'}" data-ids="tab1" data-fade="3000"></div>
						{# termina div para mostrar errores primer tab #}
						<div class="row">
							<div class="col-xs-12 col-sm-6 col-md-6">
								<div class="form-group">
									{{form_row(form.nombre)}}
								</div>
							</div>
							<div class="col-xs-12 col-sm-6 col-md-6">
								<div class="form-group">
									{{form_row(form.apellidos)}}
								</div>
							</div>
						</div>
						<div class="form-group">
							{{form_row(form.username)}}
						</div>
						<div class="row">
							<div class="form-group">
								{{form_row(form.email)}}
							</div>
						</div>
						<div class="row">
							<div class="col-xs-12 col-sm-6 col-md-6">
								<div class="form-group">
									{{form_row(form.plainPassword.first)}}
								</div>
							</div>
							<div class="col-xs-12 col-sm-6 col-md-6">
								<div class="form-group">
									{{form_row(form.plainPassword.second)}}
								</div>
							</div>
						</div>
						<hr class="colorgraph">
						
						<button type="button" class="btn btn-primary next-step-tab1 btn-block">Guardar y continuar</button>
						
					</div>
					<div class="tab-pane" role="tabpanel" id="step2">
						<h2>Registro específico de datos personales</h2>
						<hr class="colorgraph">
						<div data-alerts="alerts" data-titles="{'warning': '<em>Warning!</em>'}" data-ids="tab2" data-fade="3000"></div>
						<div class="form-group">
							{{form_row(form.direccion)}}
						</div>
						<div class="form-group">
							{{form_row(form.dpi)}}
						</div>
						<div class="row">
							<div class="col-xs-12 col-sm-6 col-md-6">
								<div class="form-group">
									{{form_row(form.nit)}}
								</div>
							</div>
							<div class="col-xs-12 col-sm-6 col-md-6">
								<div class="form-group">
									{{form_row(form.telefono)}}
								</div>
							</div>
						</div>
						<div class="form-group">
							{{form_row(form.numeroIgss)}}
						</div>
						<hr class="colorgraph">
						<div class="row">
					        <div class="col-xs-12 col-sm-6 col-md-6">
					            <div class="form-group">
	  				            	<button type="button" class="btn btn-default prev-step btn-block">Anterior</button>
	  				            </div>
					        </div>
					    
					        <div class="col-xs-12 col-sm-6 col-md-6">
					            <div class="form-group">
	   								 <button type="button" class="btn btn-primary next-step-tab2 btn-block">Guardar y continuar</button>
					            </div>
					        </div>
					    </div>
							
							
						
					</div>
					<div class="tab-pane" role="tabpanel" id="complete">
						<hr class="colorgraph">
						<div data-alerts="alerts" data-titles="{'danger': '<em>Danger!</em>'}" data-ids="tab1" data-fade="3000"></div>
						<h3>Guardar información</h3>
						<br>
						<h4>Código Administrativo</h4>
						{{ form_row(form.codigo)}}
						<button type="button" class="btn btn-xs btn-default" data-toggle="modal" data-target="#modalCodigo">
						Crear nuevo código
						</button>
						<br>
						<br>
						<h4>Gerentes y/o Socios Relacionados</h4>
						{{form_row(form.misUsuariosRelacionados)}}
						<br>
						<br>
					
						<div class="row">
					        <div class="col-xs-12 col-sm-6 col-md-6">
					            <div class="form-group">
	  				            	<button type="button" class="btn btn-default prev-step btn-block">Anterior</button>
					        	</div>
					        </div>
					    
					        <div class="col-xs-12 col-sm-6 col-md-6">
					            <div class="form-group">
	   								{{ form_row(form.submit)}}
					            </div>
					        </div>
					    </div>
						<hr class="colorgraph">
					</div>
					<div class="clearfix"></div>
				</div>

				{{ form_end(form)}}
			</div>
		</section>
	</div>
</div>
<div class="col-md-2"></div>
{% include 'UserBundle:Registration:modal_codigos.html.twig' %}
<script src="{{ asset('js/ajaxCodigo.js')}}"></script>
<script src="{{asset('js/i18next.js')}}"></script>
<script type="text/javascript" src="{{asset('js/pwstrength-bootstrap.min.js')}}"></script>
<script>
	ajaxCodigo();
	
	$(document).ready(function() { 
			$("#fos_user_registration_form_codigo").select2({ width: '50%' }); 
			$("#fos_user_registration_form_misUsuariosRelacionados").select2({ width: '50%' });           
	
			
			i18next.init({
				lng: 'es',
				resources: {
					es: {
						translation: {
								"wordLength": "Tu contraseña es demasiado corta",
								"wordNotEmail": "No uses tu email como tu contraseña",
								"wordSimilarToUsername": "Tu contraseña no puede contener tu nombre de usuario",
								"wordTwoCharacterClasses": "Mezcla diferentes clases de caracteres",
								"wordRepetitions": "Demasiadas repeticiones",
								"wordSequences": "Tu contraseña contiene secuencias",
								"errorList": "Errores:",
								"veryWeak": "Muy Débil",
								"weak": "Débil",
								"normal": "Normal",
								"medium": "Media",
								"strong": "Fuerte",
								"veryStrong": "Muy Fuerte"
	
						}
					}
				}
			}, function() {
				// initialized and ready to go!
				var options = {};
				options.rules = {
					activated: {
							wordTwoCharacterClasses: true,
							wordRepetitions: true
					}
				};
				$(':password').pwstrength(options);
			});
		
			
			});
</script>
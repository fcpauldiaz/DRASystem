{% extends "FOSUserBundle::layout.html.twig" %}

{% block stylesheets %}
	{{ form_stylesheet(form) }}
{% endblock stylesheets %}



{% block fos_user_content %}

	
	{% include "FOSUserBundle:Registration:register_content.html.twig" %}

{% endblock fos_user_content %}

{% block javascripts %}
	
        <script type="text/javascript">
        var javaQuery = window.matchMedia( "(max-width: 450px)" );
        if (!javaQuery.matches) {
            (function(){
                $("select").initialize( function(){
                     $("select.select2").select2({
                      theme: "bootstrap"
                     });
                });          
            })();
        }
        </script>
	<script src="{{asset('js/register.min.js')}}"></script>
	<script src="{{asset('js/jquery.bsAlerts.min.js')}}"></script>
	<script src="{{ asset('js/ajaxCodigo.min.js')}}"></script>
<script src="{{asset('js/i18next.js')}}"></script>
<script type="text/javascript" src="{{asset('js/pwstrength-bootstrap.min.js')}}"></script>
<script>
	ajaxCodigo();
	
	$(document).ready(function() { 
			$("#fos_user_registration_form_codigo").select2({ width: '50%' }); 
			$("#fos_user_registration_form_misUsuariosRelacionados").select2({ width: '50%' });           
	
			
			i18next.init({
				lng: 'es',
				resources: {
					es: {
						translation: {
								"wordLength": "Tu contraseña es demasiado corta",
								"wordNotEmail": "No uses tu email como tu contraseña",
								"wordSimilarToUsername": "Tu contraseña no puede contener tu nombre de usuario",
								"wordTwoCharacterClasses": "Mezcla diferentes clases de caracteres",
								"wordRepetitions": "Demasiadas repeticiones",
								"wordSequences": "Tu contraseña contiene secuencias",
								"errorList": "Errores:",
								"veryWeak": "Muy Débil",
								"weak": "Débil",
								"normal": "Normal",
								"medium": "Media",
								"strong": "Fuerte",
								"veryStrong": "Muy Fuerte"
	
						}
					}
				}
			}, function() {
				// initialized and ready to go!
				var options = {};
				options.rules = {
					activated: {
							wordTwoCharacterClasses: true,
							wordRepetitions: true
					}
				};
				$(':password').pwstrength(options);
			});
		
			
			});
</script>
	{{ form_javascript(form) }}

{% endblock %}

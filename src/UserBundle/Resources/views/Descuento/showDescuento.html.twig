{% extends '::base.html.twig' %}

{% block title %}
    Mostrar Descuento
{% endblock %}

{% block body -%}
    <h1>Descuento</h1>

    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>Nombre </th>
                <td>{{ entity.nombreDescuento }}</td>
            </tr>
            <tr>
                <th>Monto</th>
                <td>{{ entity.monto }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('descuento') }}">
           Ver Listado de Descuentos
        </a>
    </li>
    <li>
        <a class="btn btn-default" href="{{ path('descuento_edit', { 'id': entity.id }) }}">
            Editar
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}

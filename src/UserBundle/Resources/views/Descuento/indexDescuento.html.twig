{% extends '::base.html.twig' %}

{% block title %}
    Listado Descuentos
{% endblock %}

{% block body -%}
    <br>
    <h1>Listado Descuentos</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Nombredescuento</th>
                <th>Monto</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.nombreDescuento }}</td>
                <td>{{ entity.monto }}</td>
                <td>
                <ul>
                    <li>
                        <a class="btn btn-default" href="{{ path('descuento_show', { 'id': entity.id }) }}">Mostrar</a>
                    </li>
                    <li>
                        <a class="btn btn-default" href="{{ path('descuento_edit', { 'id': entity.id }) }}">Editar</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a class="btn btn-default btn-block" href="{{ path('descuento_new') }}">
                Crear nuevo registro
            </a>
        </li>
    </ul>
    {% endblock %}

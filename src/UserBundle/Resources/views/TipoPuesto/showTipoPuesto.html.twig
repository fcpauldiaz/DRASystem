{% extends '::base.html.twig' %}

{% block title %}
    Mostrar Tipo Puesto
{% endblock %}

{% block link %}
    <li><a href="{{path('homepage')}}"><i class="fa fa-link"></i>Dashboard</a></li>
     <li><a href="{{path('tipopuesto')}}"><i class="fa fa-link"></i>Lista de Tipo Puestos</a></li>
    <li class="active">Mostrar Puesto</li>
{% endblock %}

{% block javascriptDataTables %}
    
    <script src = {{asset('js/dataTablesInit.js')}}>
    </script>
{% endblock %}


{% block body -%}
    <h1>Tipo Puesto</h1>

    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>Nombre Puesto</th>
                <td>{{ entity.nombrePuesto }}</td>
            </tr>
            <tr>
                <th>Descripci√≥n</th>
                <th>{{ entity.descripcion}}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
     <li>
        <a class="btn btn-primary" href="{{ path('tipopuesto_new_post') }}">
            Crear otro tipo de puesto
        </a>
    </li>
    <li>
        <a class="btn btn-default" href="{{ path('tipopuesto') }}">
            Mostrar todos
        </a>
    </li>
    {% if is_granted('ROLE_EDITAR_PUESTO_Y_TIPO') %}
    <li>
        <a class="btn btn-warning" href="{{ path('tipopuesto_edit', { 'id': entity.id }) }}">
            Editar
        </a>
    </li>
    {% endif %}
    {% if is_granted('ROLE_ELIMINAR_PUESTO_Y_TIPO') %}
        <div class="modal">
          {{ form(delete_form) }}
        </div>
    {% endif %}
</ul>
{% endblock %}
{% block javascripts %}
   <script src="{{asset('js/confirm-dialog.js')}}"></script>
{% endblock %}

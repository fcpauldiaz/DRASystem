{% extends '::base.html.twig' %}

{% block javascriptDataTables %}
    
    <script src = {{asset('js/dataTablesInit.js')}}>
    </script>
{% endblock %}

{% block body -%}
    <br>
    <h1>Listado de Tipos de Puestos</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Nombre Puesto</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.nombrePuesto }}</td>
                <td>
                <ul>
                    <li>
                        <a class="btn btn-xs btn-info" href="{{ path('tipopuesto_show', { 'id': entity.id }) }}">Mostrar</a>
                    </li>
                    {% if is_granted('ROLE_EDITAR_PUESTO_Y_TIPO') %}
                    <li>
                        <a class="btn btn-xs btn-warning" href="{{ path('tipopuesto_edit', { 'id': entity.id }) }}">Editar</a>
                    </li>
                    {% endif %}
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        
    <a class="btn btn-primary btn-block" href="{{ path('tipopuesto_new_post') }}">
        Crear nuevo registro
    </a>
    <br>
    <br>
    <br>
      
    {% endblock %}

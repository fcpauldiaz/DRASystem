{% extends '::base.html.twig' %}

{% block javascriptDataTables %}
    
    <script src = {{asset('js/dataTablesInit.js')}}>
    </script>
{% endblock %}

{% block body -%}
    <div class="row">
        <div class="col-md-6">
            <h1>Datos Prestaciones</h1>
            <table class="table table-striped table-hover">
                <tbody>
                    <tr>
                        <th>Sueldo</th>
                        <td>{{ entity.sueldo | number_format(2, '.', ',')}}</td>
                    </tr>
                    <tr>
                        <th>Bonificación Ley</th>
                        <td>{{ entity.bonificacionIncentivo | number_format(2, '.', ', ') }}</td>
                    </tr>
                    <tr>
                        <th>Otra Bonificación</th>
                        <td>{{ entity.otraBonificacion | number_format(2, '.', ', ')}}</td>
                    </tr>
                    <tr>
                        <th>Gasolina</th>
                        <td>{{ entity.gasolina | number_format(2, '.', ', ')}}</td>
                    </tr>
                    <tr>
                        <th>Prestaciones sobre sueldo</th>
                        <td>{{ entity.prestacionesSobreSueldo | number_format(2, '.', ', ')}}</td>
                    </tr>
                    <tr>
                        <th>Otras Prestaciones</th>
                        <td>{{ entity.otrasPrestaciones | number_format(2, '.', ', ')}}</td>
                    </tr>
                     <tr>
                        <th>Viáticos</th>
                        <td>{{ entity.viaticos | number_format(2, '.', ', ')}}</td>
                    </tr>
                    <tr>
                        <th>Otros</th>
                        <td>{{ entity.otros | number_format(2, '.', ', ')}}</td>
                    </tr>
                    <tr>
                        <th>Depreciación</th>
                        <td>{{ entity.depreciacion | number_format(2, '.', ', ')}}</td>
                    </tr>
                     <tr>
                        <th>Gastos Indirectos</th>
                        <td>{{ entity.gastosIndirectos | number_format(2, '.', ', ')}}</td>
                    </tr>
                    <tr>
                        <th>Desglose Prestaciones sobre sueldo</th>
                    </tr>
                     <tr>
                        <th class="table-padding">Indemnización</th>
                        <td>{{ entity.indemnizacion | number_format(2, '.', ', ')}}</td>
                    </tr>
                     <tr>
                        <th class="table-padding">Aguinaldo</th>
                        <td>{{ entity.aguinaldo | number_format(2, '.', ', ')}}</td>
                    </tr>
                     <tr>
                        <th class="table-padding">Vacaciones</th>
                        <td>{{ entity.sueldo * 0.0417 | number_format(2, '.', ', ')}}</td>
                    </tr>
                     <tr>
                        <th class="table-padding">Bono 14</th>
                        <td>{{ entity.bono14 | number_format(2, '.', ', ')}}</td>
                    </tr>
                     <tr>
                        <th class="table-padding">Cuota Patronal</th>
                        <td>{{ entity.cuotaPatronal | number_format(2, '.', ', ')}}</td>
                    </tr>
                     <tr>
                        <th class="table-padding">Total</th>
                        <td>{{ (entity.totalDesglose )| number_format(2, '.', ', ')}}</td>
                    </tr>
                     <tr>
                        <th>Usuario</th>
                        <td>{{ entity.usuario }}</td>
                    </tr>
                </tbody>
            </table>

                <ul class="record_actions">
            
            <li>
                <a class="btn btn-default" href="{{ path('datosprestaciones_edit', { 'id': entity.id }) }}">
                    Editar
                </a>
            </li>
            <br>
            
        </ul>
    </div>
    <div class="col-md-6">
        {% if entity.usuario.puestos.last() != false %}
             {{ render(controller(
                'UserBundle:Puesto:showPlain',
                {'id': entity.usuario.puestos.last().id}
            )) }}
        {% endif %}
        </div>
    </div>
{% endblock %}
